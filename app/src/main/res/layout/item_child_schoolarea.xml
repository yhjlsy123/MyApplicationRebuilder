<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_press_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        >

        <TextView
            android:textColor="@color/black333"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x90"
            android:id="@+id/child_schoolarea"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/schoolarea_child_line"
            android:paddingLeft="@dimen/x90"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:src="@color/line" />
    </LinearLayout>
</FrameLayout>