<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/shape_stroke_white_backgroud"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="提示"
            android:textColor="@color/black333"
            android:textSize="@dimen/dp17" />

        <EditText
            android:id="@+id/edit_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_stroke_white_backgroud"
            android:gravity="left"
            android:hint="请输入要反馈的内容500字以内"
            android:maxLength="500"
            android:minHeight="100dp"
            android:padding="3dp"
            android:textColor="@color/black333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <Button
                android:id="@+id/order_submit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_corner_blue"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/order_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/x50"
                android:layout_weight="1"
                android:background="@drawable/shape_code_blue_white"
                android:text="@string/cancle"
                android:textColor="@color/blue4DA9FF"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>