<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:src="@mipmap/fanhui" />

            <TextView
                style="@style/textview40_black"
                android:layout_centerInParent="true"
                android:text="@string/setting_title"
                android:textSize="20sp" />
        </RelativeLayout>

        <View style="@style/view_all" />


        <RelativeLayout
            android:id="@+id/userguide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:paddingLeft="@dimen/x20"
            android:visibility="gone">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:text="@string/setting_userguide"
                android:textSize="15sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/choice_area_enter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_use"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:paddingLeft="@dimen/x20">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:text="用户协议"
                android:textSize="15sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/choice_area_enter" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/theme_white" />

        <RelativeLayout
            android:id="@+id/setting_aboutus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:paddingLeft="@dimen/x20">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:text="@string/aboutus"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/choice_area_enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/theme_white" />

        <RelativeLayout
            android:id="@+id/setting_callus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:paddingLeft="@dimen/x20">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:text="联系我们"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/setting_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/theme_white" />

        <RelativeLayout
            android:id="@+id/setting_checkversion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:visibility="gone">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:text="@string/checkversion"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_versionNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:saveEnabled="false"
            android:background="@drawable/selector_item_press_bg"
            android:paddingLeft="@dimen/x20">

            <TextView
                style="@style/textview30_black"
                android:layout_centerVertical="true"
                android:text="版本号"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/setting_versionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/theme_white" />

        <RadioGroup
            android:id="@+id/line_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_press_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x20"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radiobtn_selector_washer"
                android:paddingRight="@dimen/dp10"
                android:text="生产环境" />

            <RadioButton
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radiobtn_selector_washer"
                android:paddingRight="@dimen/dp10"
                android:text="测试环境" />

            <RadioButton
                android:id="@+id/dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radiobtn_selector_washer"
                android:paddingRight="@dimen/dp10"
                android:text="开发环境" />


        </RadioGroup>


        <Button
            android:id="@+id/setting_exit"
            style="@style/login_btn_new"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dp40"
            android:text="@string/setting_exit"
            android:textSize="15dp" />

    </LinearLayout>


</RelativeLayout>