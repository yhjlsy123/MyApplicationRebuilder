<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_white"

    android:orientation="vertical">


    <ImageView
        android:id="@+id/img"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/dp13"
        android:background="@mipmap/notice_concent_icon" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_toRightOf="@+id/img"
        android:text="18.23"
        android:textColor="@color/login_yellow"
        android:textSize="@dimen/dp13" />

    <View
        android:id="@+id/view_c"
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:layout_below="@id/img"
        android:layout_marginLeft="@dimen/dp20"
        android:background="@color/login_yellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@+id/view_c"
        android:background="@drawable/shape_stroke_white_backgroud"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp8"
            android:text="应用更新通知"
            android:textColor="@color/black333"
            android:textSize="@dimen/dp15" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp8"
            android:ellipsize="end"
            android:lines="2"
            android:singleLine="false"
            android:text="应用更新应用更新通知应用更新通知大地方大幅度发大幅度发地方大幅度发多多多多多多多多多扩幅度发的发的应用更新通通知应用更新通知应用更新通知应用更新通知通知"
            android:textColor="@color/black333"
            android:textSize="@dimen/dp15" />
    </LinearLayout>
</RelativeLayout>