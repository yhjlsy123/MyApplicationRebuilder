<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/authe_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/selector_back" />

        <TextView
            style="@style/textview40_black"
            android:layout_centerInParent="true"
            android:text="学号认证"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:src="@mipmap/defaut_user_photo" />

    <EditText
        android:id="@+id/authe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y110"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/authe_name"
        android:drawablePadding="@dimen/x20"
        android:hint="请输入姓名"
        android:textColor="@color/black"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />

    <EditText
        android:id="@+id/authe_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y90"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/input_code"
        android:drawablePadding="@dimen/x20"
        android:hint="请输入学号"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />

    <Button
        android:id="@+id/authe_enter"
        style="@style/textview30_white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y80"
        android:background="@drawable/selector_bg_corner_blue"
        android:gravity="center"
        android:text="认 证" />
</LinearLayout>