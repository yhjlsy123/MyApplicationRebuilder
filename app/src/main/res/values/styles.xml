    <style name="view_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">@dimen/y4</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="login_btn"><!--原来登录按钮，点击前后都有阴影，-->
        <item name="android:textSize">@dimen/font30px</item>
