<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/management_user_icon"
            android:drawablePadding="@dimen/dp15"
            android:textColor="@color/black333"
            android:textSize="@dimen/dp15" />

        <TextView
            android:id="@+id/tv_manageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:textColor="@color/black333"
            android:textSize="@dimen/dp15" />
        <TextView
            android:id="@+id/tv_benJ"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp14" />
        <TextView
            android:layout_toLeftOf="@id/tv_benJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本金:"
            android:textSize="@dimen/dp14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1885411"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_zs_money"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp14" />
        <TextView
            android:layout_toLeftOf="@id/tv_zs_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送金额:"
            android:textSize="@dimen/dp14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_payType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_hinType"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp14" />
        <TextView
            android:layout_toLeftOf="@id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额:"
            android:textSize="@dimen/dp14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hinCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属校区："
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_Campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/tv_hinCampus"
            android:textSize="@dimen/dp14" />
        <TextView
            android:id="@+id/tv_yaj"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp14" />
        <TextView
            android:layout_toLeftOf="@id/tv_yaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押金:"
            android:textSize="@dimen/dp14" />

    </RelativeLayout>
    <View
        style="@style/view_all"
        android:layout_marginLeft="@dimen/dp22"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dp22"/>
</LinearLayout>