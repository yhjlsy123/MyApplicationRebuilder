<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toobar_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浴室名称"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_bathroomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <LinearLayout
                android:id="@+id/uuid_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="u   u   i   d"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_uuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属校区"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_campus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />


            <com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup
                android:id="@+id/sex_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"


                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性        别"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/checkbox_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"

                    android:drawableLeft="@drawable/btn_selector_feedback"
                    android:drawablePadding="@dimen/dp5"
                    android:paddingLeft="@dimen/dp15"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/checkbox_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/alpha_color"
                    android:button="@null"
                    android:drawableLeft="@drawable/btn_selector_feedback"
                    android:drawablePadding="@dimen/dp5"
                    android:paddingLeft="@dimen/dp15"
                    android:text="女" />


            </com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup>


            <View style="@style/view_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼        号"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/edit_floor_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:hint="请输入几号楼"
                    android:textColorHint="@color/gray999"
                    android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼        层"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/edit_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:background="@color/white"
                    android:hint="请输入楼层"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用浴卫"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_guard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:hint="请输入浴卫个数"
                    android:textColorHint="@color/gray999"
                    android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t_lablel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_toRightOf="@+id/t_lablel"
                    android:hint="开始时间- - -结束时间"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_toRightOf="@+id/t_lablel"
                    android:hint="开始时间- - -结束时间"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>


            <!--
             <View style="@style/view_all" />
             <com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup
                  android:id="@+id/r_group"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/dp8"
                  android:layout_marginLeft="@dimen/dp25"
                  android:layout_marginTop="@dimen/dp8"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="维修状态"
                      android:textColor="@color/black333"
                      android:textSize="@dimen/dp13" />

                  <RadioButton
                      android:id="@+id/checkbox_normal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@color/alpha_color"
                      android:button="@null"
                      android:drawableLeft="@drawable/btn_selector_feedback"
                      android:drawablePadding="@dimen/dp5"
                      android:paddingLeft="@dimen/dp15"
                      android:text="正常" />

                  <RadioButton
                      android:id="@+id/checkbox_repair"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp15"
                      android:background="@color/alpha_color"
                      android:button="@null"
                      android:drawableLeft="@drawable/btn_selector_feedback"
                      android:drawablePadding="@dimen/dp5"
                      android:paddingLeft="@dimen/dp15"
                      android:text="维修"
                      android:textSize="@dimen/sp_14" />

              </com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup>-->


            <View style="@style/view_all" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修原因"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/editReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:background="@color/white"
                    android:hint="请输入维修原因"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View style="@style/view_all" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否开启"
                    android:textColor="@color/black333"
                    android:textSize="@dimen/sp_14" />

                <com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup
                    android:id="@+id/s_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/s_wish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ck_color_selector"
                        android:drawablePadding="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp5"
                        android:text="离线"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/s_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:button="@null"
                        android:drawableLeft="@drawable/ck_color_selector"
                        android:drawablePadding="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp5"
                        android:text="正常"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/s_colse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ck_color_selector"
                        android:drawablePadding="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp5"
                        android:text="禁用"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/s_maintain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ck_color_selector"
                        android:drawablePadding="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp5"
                        android:text="维护"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/s_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ck_color_selector"
                        android:drawablePadding="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingTop="@dimen/dp5"
                        android:text="删除"
                        android:textSize="@dimen/sp_14" />

                </com.zhuochi.hydream.bathhousekeeper.view.FlowRadioGroup>

            </TableRow>

            <View style="@style/view_all" />

            <Button
                android:id="@+id/save"
                style="@style/login_btn_new"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp30"
                android:text="@string/finish" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>