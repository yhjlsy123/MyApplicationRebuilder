<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="@dimen/dp10"
    android:paddingBottom="@dimen/dp10"
    android:paddingLeft="@dimen/dp20"
    android:paddingRight="@dimen/dp20"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@mipmap/management_top_up_icon"
                android:drawablePadding="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="充值卡名称:  "
                android:textColor="@color/black333"
                android:textSize="@dimen/dp16"/>

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元"
                android:textColor="@color/black333"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额:  "/>

            <TextView
                android:id="@+id/denomination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同学111"
                android:textColor="@color/black333"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="创建时间:  "/>

            <TextView
                android:id="@+id/created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.07.30  14:05"
                android:textColor="@color/black333"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值类型:  "/>

            <TextView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同学111"
                android:textColor="@color/black333"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属学校:  "/>

            <TextView
                android:id="@+id/org_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同学111"
                android:textColor="@color/black333"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送金额:  "/>

            <TextView
                android:id="@+id/give"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同学111"
                android:textColor="@color/black333"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属校区:  "/>

            <TextView
                android:id="@+id/org_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同学111"
                android:textColor="@color/black333"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>