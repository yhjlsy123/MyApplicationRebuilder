<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp5"
    android:paddingBottom="@dimen/dp5"
    android:paddingLeft="@dimen/dp20"
    android:paddingRight="@dimen/dp20"
    android:layout_marginTop="@dimen/dp5"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="订单号:"
                android:textSize="@dimen/dp16"/>

            <TextView
                android:id="@+id/order_sn"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp16"
                android:text="541654654"/>

        </LinearLayout>

        <TextView
            android:id="@+id/order_state"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_25bd33"
            android:textSize="@dimen/dp16"
            android:text="已完成"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="创建时间:"/>

        <TextView
            android:id="@+id/create_time"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="已完成"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="浴         室:"/>

        <TextView
            android:id="@+id/bathroom"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="已完成"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="消费金额:"/>

        <TextView
            android:id="@+id/order_amount"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="已完成"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:text="支付金额:"/>

        <TextView
            android:id="@+id/cash_amount"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_f49b17"
            android:text="已完成"/>

    </RelativeLayout>




</LinearLayout>