<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/record_root"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <ImageView
            android:id="@+id/record_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:src="@color/line" />

        <TextView
            android:id="@+id/record_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="15dp"
            android:text="2016-11-15 10:21:14"
            android:textColor="@color/gray999"
            android:textSize="@dimen/font24px" />


        <TextView
            android:id="@+id/record_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="未支付"
            android:textColor="@color/blue4DA9FF"
            android:textSize="@dimen/font28px" />

        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/x20"
            android:drawableLeft="@mipmap/xiaofeijilu_shijian"
            android:drawablePadding="@dimen/x45"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/font28px" />
        <TextView
            android:id="@+id/record_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/x20"
            android:drawableLeft="@mipmap/icon_water"
            android:drawablePadding="@dimen/x45"
            android:gravity="center_vertical"
            android:text="约30"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/font28px" />

        <TextView
            android:id="@+id/record_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="@dimen/x20"
            android:text="190"
            android:textColor="@color/black"
            android:textSize="@dimen/font28px" />
    </RelativeLayout>
</FrameLayout>