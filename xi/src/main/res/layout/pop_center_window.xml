

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal" >

    <TextView
        android:id="@+id/more_window_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:drawableTop="@mipmap/home_pop_left_n"
        android:paddingBottom="15dp"
        android:text="洗澡" />

    <TextView
        android:id="@+id/more_window_online"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_local"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:paddingBottom="15dp"
      />

    <TextView
        android:id="@+id/more_window_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/more_window_online"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:drawableTop="@mipmap/home_pop_right_n"
        android:paddingBottom="15dp"
        android:text="吹风机"/>


    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_local"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dip"
        android:layout_toRightOf="@+id/more_window_local"
        android:src="@drawable/selector_view_pop" />

</RelativeLayout>