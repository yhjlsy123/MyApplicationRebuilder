<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf0bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/x610"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/shape_stoke_corner_gray_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y114"
                android:gravity="center"
                android:text="排队中..."
                android:textColor="@color/redfb3829"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排队位置"
                    android:textColor="@color/blue4DA9FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lineup_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/x30"
                    android:text="11"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="预计等待"
                    android:textColor="@color/blue4DA9FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lineup_time_except"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/x30"
                    android:text="11"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浴室位置"
                    android:textColor="@color/blue4DA9FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lineup_bathroomlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/x30"
                    android:text="11"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y33"
                android:background="@color/line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="开柜密码"
                    android:textColor="@color/blue4DA9FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lineup_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/service_wait_hide"
                    android:gravity="center_vertical"
                    android:inputType="numberPassword"
                    android:text="123456"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/service_wait_hide"
                    style="@style/pwdcheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:src="@mipmap/kaiguimima_hide" />
            </RelativeLayout>

            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/x1"
                 android:layout_marginRight="@dimen/x30"
                 android:background="@color/line" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/y100">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:gravity="center_vertical"
                     android:text="到时提醒"
                     android:textColor="@color/gray999"
                     android:textSize="16sp" />

                 <CheckBox
                     android:id="@+id/line_up_tip_checkbox"
                     style="@style/rightcheckbox"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_alignParentRight="true"
                     android:paddingRight="@dimen/x30" />
             </RelativeLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y160"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x100"
            android:layout_marginTop="@dimen/y80"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_tip2" />

                <TextView
                    android:id="@+id/lineup_tip1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x40"
                    android:singleLine="true"
                    android:text="请尽快到达浴室,超过15分钟将自动取消"
                    android:textColor="@color/green6ab840"
                    android:textSize="13sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lineup_tip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginTop="@dimen/y18"
                android:singleLine="true"
                android:text="柜门关闭后才可结束洗澡流程"
                android:textColor="@color/green6ab840"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/lineup_cancel"
        style="@style/textview40_white"
        android:layout_width="@dimen/x710"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_corner_blue"
        android:gravity="center"
        android:text="@string/cancle" />
</LinearLayout>