<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
       >

        <ImageView
            android:id="@+id/message_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@mipmap/fanhui" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/login_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x110"
        android:src="@mipmap/defaut_user_photo" />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y90"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/input_phone"
        android:drawablePadding="@dimen/x20"
        android:hint="@string/input_phone"
        android:inputType="number"
        android:maxLength="11"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/login_code"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_input_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x40"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/input_code"
                android:drawablePadding="@dimen/x20"
                android:hint="@string/input_code"
                android:inputType="number"
                android:maxLength="6"
                android:textColorHint="@color/gray999"
                android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/line" />

        </LinearLayout>

        <Button
            android:id="@+id/login_code"
            android:layout_width="@dimen/x280"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/selector_corner_blue_white"
            android:gravity="center"
            android:text="@string/login_code"
            android:textColor="@color/blue4DA9FF"
            android:textSize="15sp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y70"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/input_code"
        android:drawablePadding="@dimen/x20"
        android:hint="请输入6-12位密码"
        android:maxLength="12"
        android:inputType="textPassword"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />
    <EditText
        android:id="@+id/repeat_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y70"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/input_code"
        android:drawablePadding="@dimen/x20"
        android:hint="请输入重复密码"
        android:maxLength="12"
        android:inputType="textPassword"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />
    <Button
        android:id="@+id/login_enter"
        style="@style/textview30_white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y80"
        android:background="@drawable/selector_bg_corner_blue"
        android:gravity="center"
        android:text="@string/login_enter" />

</LinearLayout>