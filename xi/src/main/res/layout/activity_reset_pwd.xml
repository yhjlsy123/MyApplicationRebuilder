<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/h5_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/selector_back" />

        <TextView
            style="@style/textview40_black"
            android:layout_centerInParent="true"
            android:text="重置密码"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
    <RelativeLayout
        android:id="@+id/user_bathe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_item_press_bg"
        android:paddingLeft="@dimen/x20">

        <TextView
            style="@style/textview30_black"
            android:layout_centerVertical="true"
            android:text="重置设备密码"
            android:textSize="15sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/choice_area_enter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_account_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_item_press_bg"
        android:paddingLeft="@dimen/x20">

        <TextView
            style="@style/textview30_black"
            android:layout_centerVertical="true"
            android:text="重置账号密码"
            android:textSize="15sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/choice_area_enter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>

</LinearLayout>