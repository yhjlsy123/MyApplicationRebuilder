<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/login_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x110"
        android:src="@mipmap/defaut_user_photo" />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y90"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/input_phone"
        android:drawablePadding="@dimen/x20"
        android:hint="@string/input_phone"
        android:inputType="number"
        android:maxLength="11"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x30"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x40"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/input_code"
                android:drawablePadding="@dimen/x20"
                android:hint="@string/input_password"
                android:maxLength="12"
                android:inputType="textPassword"
                android:textColorHint="@color/gray999"
                android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/line" />

        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/login_enter"
        style="@style/textview30_white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y80"
        android:background="@drawable/selector_bg_corner_blue"
        android:gravity="center"
        android:text="@string/login_enter" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_loginQuick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:textColor="@color/bluepress"
                android:text="@string/login_quick"/>
            <TextView
                android:id="@+id/txt_backPassword"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:textColor="@color/bluepress"
                android:text="@string/back_password"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shiyongshuoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shiyongshenming"
            android:textColor="@color/gray999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《超级澡堂用户协议》"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>