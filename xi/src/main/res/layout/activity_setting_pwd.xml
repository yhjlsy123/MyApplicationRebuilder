<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf0bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/rank_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/selector_back" />

        <TextView
            android:id="@+id/title"
            style="@style/textview40_black"
            android:layout_centerInParent="true"
            android:text="重置设备密码"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <EditText
        android:id="@+id/setting_pwd_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="请输入8-10位数字密码"
        android:inputType="numberPassword"
        android:maxLength="10"
        android:paddingLeft="@dimen/x40"
        android:textColor="@color/black"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:paddingLeft="@dimen/x40"
        android:src="@color/line" />

    <EditText
        android:id="@+id/setting_pwd_inputagain"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="再次输入"
        android:inputType="numberPassword"
        android:maxLength="10"
        android:paddingLeft="@dimen/x40"
        android:textColor="@color/black"
        android:textColorHint="@color/gray999"
        android:textCursorDrawable="@drawable/shape_quicklogin_et_cursor"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y140"
        android:gravity="center"
        android:text="此密码为您洗浴和使用吹风机时开启水阀的密码，请妥善保管"
        android:textColor="@color/redfb3829"
        android:textSize="13sp" />

    <Button
        android:id="@+id/setting_pwd_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_corner_blue"
        android:gravity="center"
        android:text="修 改"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>